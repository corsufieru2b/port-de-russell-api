<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tableau de Bord - Port de Russell</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <!-- Navigation -->
    <%- include('../partials/navbar') %>

    <div class="container mt-4">
        <div class="row">
            <div class="col-12">
                <h1>Tableau de Bord</h1>
                <p class="text-muted">Bienvenue, <span id="userName"><%= user.username %></span> !</p>
            </div>
        </div>

        <!-- Cartes de statistiques -->
        <div class="row mt-4">
            <div class="col-md-4">
                <div class="card text-white bg-primary mb-3">
                    <div class="card-body">
                        <h5 class="card-title" id="catwaysCount">...</h5>
                        <p class="card-text">Catways disponibles</p>
                        <a href="/catways" class="btn btn-light btn-sm">Gérer les catways</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-white bg-success mb-3">
                    <div class="card-body">
                        <h5 class="card-title" id="reservationsCount">...</h5>
                        <p class="card-text">Réservations totales</p>
                        <a href="/reservations" class="btn btn-light btn-sm">Gérer les réservations</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-white bg-warning mb-3">
                    <div class="card-body">
                        <h5 class="card-title" id="usersCount">...</h5>
                        <p class="card-text">Utilisateurs actifs</p>
                        <a href="/users" class="btn btn-light btn-sm">Gérer les utilisateurs</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Réservations en cours -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5>Réservations en cours</h5>
                    </div>
                    <div class="card-body">
                        <div id="currentReservations">
                            <p>Chargement des réservations...</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/dashboard.js"></script>
</body>
</html>